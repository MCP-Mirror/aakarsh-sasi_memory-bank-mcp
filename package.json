{
  "name": "@movibe/memory-bank-mcp",
  "version": "0.1.0",
  "description": "MCP Server para gerenciar o Memory Bank",
  "type": "module",
  "main": "build/index.js",
  "scripts": {
    "clean": "rm -rf build",
    "build": "bun run clean && bun build src/index.ts --outdir build --target node",
    "start": "bun build/index.js",
    "dev": "bun --watch src/index.ts",
    "build:start": "bun run build && bun run start",
    "test": "bun test"
  },
  "keywords": [
    "mcp",
    "memory-bank"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.6.1",
    "fs-extra": "^11.1.1",
    "path": "^0.12.7"
  },
  "devDependencies": {
    "@types/bun": "^1.2.4",
    "@types/fs-extra": "^11.0.1",
    "@types/node": "^20.4.5",
    "typescript": "^5.1.6"
  }
}